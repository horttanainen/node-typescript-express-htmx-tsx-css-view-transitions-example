{
  "compilerOptions": {
    "rootDir": "./src",
    "noEmit": true,

    "module": "nodenext",
    "target": "esnext",
    "types": [],
    "lib": ["esnext"],
    "types": ["node"],

    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
